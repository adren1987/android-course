    <ImageView
        android:id="@+id/chUrl1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/url_icon"
        app:layout_constraintTop_toTopOf="@id/chName1"
        app:layout_constraintRight_toRightOf="@id/chName1"/>

    <!-- Divider -->

    <View
